#include <stdio.h>
#define MAX 100
int main() {
    int arr[MAX], n, choice, value, pos;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    while (1) {
        printf("\n----- MENU -----\n");
        printf("1. Insert at Beginning\n");
        printf("2. Insert at End\n");
        printf("3. Insert at Position (from start)\n");
        printf("4. Display Array\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            if (n == MAX) {
                printf("Array is full!\n");
                continue;
            }
            printf("Enter value to insert: ");
            scanf("%d", &value);
            for (int i = n; i > 0; i--) {
                arr[i] = arr[i - 1];
            }
            arr[0] = value;
            n++;
            printf("Inserted at beginning.\n");
        }
        else if (choice == 2) {
            if (n == MAX) {
                printf("Array is full!\n");
                continue;
            }
            printf("Enter value to insert: ");
            scanf("%d", &value);

            arr[n] = value;
            n++;
            printf("Inserted at end.\n");
        }
        else if (choice == 3) {
            if (n == MAX) {
                printf("Array is full!\n");
                continue;
            }
            printf("Enter position (1 to %d): ", n + 1);
            scanf("%d", &pos);

            if (pos < 1 || pos > n + 1) {
                printf("Invalid position!\n");
                continue;
            }
            printf("Enter value to insert: ");
            scanf("%d", &value);
            for (int i = n; i >= pos; i--) {
                arr[i] = arr[i - 1];
            }
            arr[pos - 1] = value;
            n++;
            printf("Inserted at position %d.\n", pos);
        }

        else if (choice == 4) {
            printf("Array elements: ");
            for (int i = 0; i < n; i++) {
                printf("%d ", arr[i]);
            }
            printf("\n");
        }
        else if (choice == 5) {
            printf("Exiting program.\n");
            break;
        }
        else {
            printf("Invalid choice! Try again.\n");
        }
    }
    return 0;
}
